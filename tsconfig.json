{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "strict": true,
        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/**/*"
    ]
}